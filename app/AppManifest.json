{
    "manifestVersion": "v3",
    "name": "SpeedMonitorApp",
    "interfaces": [
        {
            "type": "vehicle-signal-interface",
            "config": {
                "src": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v4.0/vss_rel_4.0.json",
                "datapoints":
                {
                    "required": [
                        {
                            "path": "Vehicle.Speed",
                            "required": "true",
                            "access": "read"
                        }
                    ]
                }
            }
        },
        {
            "type": "pubsub",
            "config": {
                "reads": [ "speedmonitor/getSpeed" ],
                "writes": [
                    "speedmonitor/getSpeed/response",
                    "speedmonitor/currentSpeed",
                    "speedmonitor/alert"
                ]
            }
        }
    ]
}
