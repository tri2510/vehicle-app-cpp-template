{
    "manifestVersion": "v3",
    "name": "VehicleControlApp",
    "interfaces": [
        {
            "type": "vehicle-signal-interface",
            "config": {
                "src": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v4.0/vss_rel_4.0.json",
                "datapoints":
                {
                    "required": [
                        {
                            "path": "Vehicle.Cabin.Door.Row1.DriverSide.IsOpen",
                            "required": "true",
                            "access": "readwrite"
                        },
                        {
                            "path": "Vehicle.Cabin.Door.Row1.PassengerSide.IsOpen",
                            "required": "true",
                            "access": "readwrite"
                        },
                        {
                            "path": "Vehicle.Cabin.Seat.Row1.DriverSide.Position",
                            "required": "true",
                            "access": "readwrite"
                        },
                        {
                            "path": "Vehicle.Cabin.Seat.Row1.PassengerSide.Position",
                            "required": "true",
                            "access": "readwrite"
                        },
                        {
                            "path": "Vehicle.Body.Trunk.Rear.IsOpen",
                            "required": "true",
                            "access": "readwrite"
                        }
                    ]
                }
            }
        },
        {
            "type": "pubsub",
            "config": {
                "reads": [ "vehiclecontrol/reset", "vehiclecontrol/status" ],
                "writes": [
                    "vehiclecontrol/reset/response",
                    "vehiclecontrol/status/response",
                    "vehiclecontrol/sequence/started",
                    "vehiclecontrol/sequence/completed"
                ]
            }
        }
    ]
}
