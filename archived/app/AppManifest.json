{
    "manifestVersion": "v3",
    "name": "SpeedMonitorApp",
    "interfaces": [
        {
            "type": "vehicle-signal-interface",
            "config": {
                "src": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v4.0/vss_rel_4.0.json",
                "datapoints": {
                    "required": [
                        {
                            "path": "Vehicle.Speed",
                            "required": "true",
                            "access": "read"
                        },
                        {
                            "path": "Vehicle.Acceleration.Longitudinal",
                            "required": "false",
                            "access": "read"
                        },
                        {
                            "path": "Vehicle.CurrentLocation.Latitude",
                            "required": "false",
                            "access": "read"
                        },
                        {
                            "path": "Vehicle.CurrentLocation.Longitude",
                            "required": "false",
                            "access": "read"
                        }
                    ]
                }
            }
        },
        {
            "type": "pubsub",
            "config": {
                "reads": [
                    "speedmonitor/config",
                    "speedmonitor/reset"
                ],
                "writes": [
                    "speedmonitor/alerts",
                    "speedmonitor/status",
                    "speedmonitor/statistics"
                ]
            }
        }
    ]
}