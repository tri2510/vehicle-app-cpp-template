{
  "metadata": {
    "name": "CustomFleetVSS",
    "version": "1.0.0",
    "description": "Extended VSS specification for advanced fleet management and analytics",
    "author": "Fleet Analytics Team",
    "extends": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v4.0/vss_rel_4.0.json"
  },
  "Vehicle": {
    "type": "branch",
    "description": "High-level vehicle data.",
    "FleetManagement": {
      "type": "branch",
      "description": "Fleet management and operations signals",
      "FleetID": {
        "type": "attribute",
        "datatype": "string",
        "description": "Unique fleet identifier for this vehicle",
        "default": "FLEET_001"
      },
      "DriverID": {
        "type": "sensor",
        "datatype": "string",
        "description": "Current authenticated driver identifier",
        "unit": "N/A"
      },
      "RouteID": {
        "type": "sensor", 
        "datatype": "string",
        "description": "Current assigned route identifier",
        "unit": "N/A"
      },
      "TripID": {
        "type": "sensor",
        "datatype": "string", 
        "description": "Current trip session identifier",
        "unit": "N/A"
      },
      "VehicleStatus": {
        "type": "sensor",
        "datatype": "string",
        "description": "Current operational status",
        "allowed": ["ACTIVE", "IDLE", "MAINTENANCE", "OFFLINE"],
        "unit": "N/A"
      },
      "DispatchPriority": {
        "type": "sensor",
        "datatype": "uint8",
        "description": "Current dispatch priority level (1-10)",
        "min": 1,
        "max": 10,
        "unit": "N/A"
      }
    },
    "Analytics": {
      "type": "branch", 
      "description": "Advanced analytics and scoring signals",
      "DrivingScore": {
        "type": "sensor",
        "datatype": "float",
        "description": "Real-time driving performance score (0-100)",
        "min": 0.0,
        "max": 100.0,
        "unit": "percent"
      },
      "EcoEfficiency": {
        "type": "sensor",
        "datatype": "float", 
        "description": "Fuel efficiency score based on driving patterns",
        "min": 0.0,
        "max": 100.0,
        "unit": "percent"
      },
      "SafetyRating": {
        "type": "sensor",
        "datatype": "float",
        "description": "Safety compliance rating (0-100)",
        "min": 0.0,
        "max": 100.0, 
        "unit": "percent"
      },
      "AlertLevel": {
        "type": "sensor",
        "datatype": "uint8",
        "description": "Current system alert level (0=OK, 1=INFO, 2=WARNING, 3=CRITICAL, 4=EMERGENCY)",
        "min": 0,
        "max": 4,
        "unit": "N/A"
      },
      "MaintenanceScore": {
        "type": "sensor",
        "datatype": "float",
        "description": "Predictive maintenance health score (0-100, lower means maintenance needed)",
        "min": 0.0,
        "max": 100.0,
        "unit": "percent"  
      }
    },
    "Operations": {
      "type": "branch",
      "description": "Real-time operational data and commands",
      "RouteOptimization": {
        "type": "branch",
        "description": "Route optimization metrics",
        "TimeEfficiency": {
          "type": "sensor",
          "datatype": "float",
          "description": "Current route time efficiency percentage vs optimal",
          "min": 0.0,
          "max": 200.0,
          "unit": "percent"
        },
        "FuelEfficiency": {
          "type": "sensor", 
          "datatype": "float",
          "description": "Route fuel efficiency vs baseline",
          "min": 0.0,
          "max": 200.0,
          "unit": "percent"
        },
        "TrafficFactor": {
          "type": "sensor",
          "datatype": "float",
          "description": "Current traffic impact factor (1.0 = normal, >1.0 = delays)",
          "min": 0.5,
          "max": 5.0,
          "unit": "N/A"
        }
      },
      "Communication": {
        "type": "branch",
        "description": "Vehicle-to-fleet communication",
        "LastHeartbeat": {
          "type": "sensor",
          "datatype": "uint64",
          "description": "Last communication heartbeat timestamp",
          "unit": "ms"
        },
        "SignalStrength": {
          "type": "sensor",
          "datatype": "uint8", 
          "description": "Communication signal strength (0-100)",
          "min": 0,
          "max": 100,
          "unit": "percent"
        },
        "DataUsage": {
          "type": "sensor",
          "datatype": "float",
          "description": "Current session data usage",
          "min": 0.0,
          "unit": "MB"
        }
      }
    },
    "CustomSensors": {
      "type": "branch",
      "description": "Custom business-specific sensors",
      "CargoStatus": {
        "type": "branch",
        "description": "Cargo and load management",
        "LoadWeight": {
          "type": "sensor",
          "datatype": "float",
          "description": "Current cargo load weight",
          "min": 0.0,
          "unit": "kg"
        },
        "LoadPercentage": {
          "type": "sensor",
          "datatype": "float", 
          "description": "Cargo load as percentage of capacity",
          "min": 0.0,
          "max": 100.0,
          "unit": "percent"
        },
        "CargoType": {
          "type": "sensor",
          "datatype": "string",
          "description": "Type of cargo being transported",
          "unit": "N/A"
        },
        "CargoTemperature": {
          "type": "sensor",
          "datatype": "float",
          "description": "Cargo compartment temperature",
          "unit": "celsius"
        }
      },
      "Environmental": {
        "type": "branch",
        "description": "Enhanced environmental monitoring",
        "AirQualityIndex": {
          "type": "sensor",
          "datatype": "uint16",
          "description": "Local air quality index",
          "min": 0,
          "max": 500,
          "unit": "AQI"
        },
        "NoiseLevel": {
          "type": "sensor",
          "datatype": "float", 
          "description": "Ambient noise level",
          "min": 0.0,
          "max": 120.0,
          "unit": "dB"
        },
        "RoadCondition": {
          "type": "sensor",
          "datatype": "string",
          "description": "Current road surface condition",
          "allowed": ["DRY", "WET", "ICY", "SNOW", "GRAVEL", "CONSTRUCTION"],
          "unit": "N/A"
        }
      }
    }
  }
}