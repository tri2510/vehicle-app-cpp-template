{
  "manifestVersion": "v3",
  "name": "FuelEfficiencyTracker",
  "interfaces": [
    {
      "type": "vehicle-signal-interface",
      "config": {
        "src": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v4.0/vss_rel_4.0.json",
        "datapoints": {
          "required": [
            {
              "path": "Vehicle.Speed",
              "optional": false,
              "access": "read"
            },
            {
              "path": "Vehicle.Powertrain.FuelSystem.InstantConsumption",
              "optional": false,
              "access": "read"
            },
            {
              "path": "Vehicle.TraveledDistance",
              "optional": false,
              "access": "read"
            },
            {
              "path": "Vehicle.Powertrain.CombustionEngine.Speed",
              "optional": true,
              "access": "read"
            },
            {
              "path": "Vehicle.Powertrain.Transmission.CurrentGear",
              "optional": true,
              "access": "read"
            }
          ]
        }
      }
    },
    {
      "type": "pubsub",
      "config": {
        "reads": [
          "fueltracker/config",
          "fueltracker/reset",
          "fueltracker/trip/start",
          "fueltracker/trip/end"
        ],
        "writes": [
          "fueltracker/status",
          "fueltracker/efficiency",
          "fueltracker/trip/summary",
          "fueltracker/alerts"
        ]
      }
    }
  ]
}